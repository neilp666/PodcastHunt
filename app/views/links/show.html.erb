<div class="show-header" >

  <div class="show-header-content" >
    <h1><%= @link.title %></h1>
    <h4><%= @link.subtitle %></h4>
    <div class="show-buttons" >
      <a href="#" class="show-upvote-button btn btn-default btn-sm" >
            <span class="glyphicon glyphicon-chevron-up" ></span><br>
            <span>36</span>
      </a>

    
        <%= link_to "GET IT",  @link.url, class: "get btn btn-primary btn-sm" %>
      </a>

      
    </div>
  </div>
  
</div>


<div>
  <div class="row row-grey" >
  <div class="greybg" >
    <div class="col-xs-8 left-side " >

      <% if current_user %>

      <div class="col-xs-12 pad-top-big pad-bot-medium" >

      <div class="hidden-xs  col-sm-1"><span class="image" ><%= image_tag current_user.image, width: "40px;", height: "40px;" %></span></div>
      <div class="col-xs-12  col-sm-11" >
          <%= form_for [@link, @link.comments.build] do |f| %>
          
        <div class="form-group">
        <%= f.text_area :body, class: "form-control", placeholder: "Write your comment here" %>
        
        </div>
      
      <div class="form-group">
      
        
        <%= f.submit(class: "btn btn-default float-right") %>
       </div>
      <% end %>
      </div>
        
    </div>
  <% end %>


      <div class="col-xs-12 small-top-padding" >
        <hr class="" >
      </div>

      <% if @link.comments %>

          <div class="comments-show-section col-sm-12" >
      
      
          <div class="col-xs-12" >
            <p class="comments-header" >
                <strong>Comments</strong>
            </p>
          </div>


               <%= render @link.comments.order("created_at DESC") %>
          </div>
      <% end %>
  

  

  </div>
    <div class="col-xs-4 right-side" >
      <div class="row upvotes-show-section pad-top-big pad-bot-medium" >
        <div class="col-xs-12" >
            <p class="upvotes-header" >
            <strong> <span class="likes-count" >12</span> Upvotes</strong>
        </div>

        <div class=pad-top"col-xs-12" >
          <% 20.times do %>
            <div class="right-side-upvote-block"><span class="image" ><%= image_tag "guy.jpg", width: "40px;", height: "40px;" %></span></div>
          <% end %>
        </div>

        
      </div>
        
    </div>
  </div>  
  </div>
</div>


