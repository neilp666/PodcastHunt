

<p>
  <strong>Title:</strong>
  <%= @link.title %>
</p>

<p>
  <strong>Subtitle:</strong>
  <%= @link.subtitle %>
</p>

<p>
  <strong>Url:</strong>
  <%= @link.url %>
</p>




    <% if current_user %>
    <h2>
    Leave a comment
    </h2>
    <%= form_for [@link, @link.comments.build] do |f| %>

   
       <%= f.text_area(:body) %><br>
       <%= f.submit %>

    <% end %> 
  <% end %>

<% if @link.comments %>
<h2>
  Comments:
</h2>

<%= render @link.comments %>

<% end %>
